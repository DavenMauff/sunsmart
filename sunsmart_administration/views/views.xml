<odoo>
  <data>
  
  <record id="view_degrees_tree" model="ir.ui.view">
      <field name="name">view.degrees.tree</field>
      <field name="model">degrees</field>

      <field name="arch" type="xml">
        <tree string="Degrees Tree">
          <field name="module_1"/>
          <field name="module_2"/>
          <field name="module_3"/>
          <field name="module_4"/>
          <field name="module_5"/>
          <field name="module_6"/>
          <field name="module_7"/>
          <field name="module_8"/>
          <field name="module_9"/>
          <field name="module_10"/>
          <field name="module_11"/>
          <field name="module_12"/>
        </tree>
      </field>
    </record>

    <record id="action_degrees_views" model="ir.actions.act_window">
      <field name="name">Degrees</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">degrees</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create"> 
          Degrees
        </p><p>
          Click to Add
        </p>
      </field>
    </record>

  <record id="view_modules_tree" model="ir.ui.view">
      <field name="name">view.modules.tree</field>
      <field name="model">modules</field>

      <field name="arch" type="xml">
        <tree string="Modules Tree">
          <field name="module_name"/>
          <field name="lecturer"/>
        </tree>
      </field>
    </record>

    <record id="action_modules_views" model="ir.actions.act_window">
      <field name="name">Modules</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">modules</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create"> 
          Modules
        </p><p>
          Click to Add
        </p>
      </field>
    </record>

    <record id="view_departments_tree" model="ir.ui.view">
      <field name="name">view.departments.tree</field>
      <field name="model">departments</field>

      <field name="arch" type="xml">
        <tree string="Departments Tree">
          <field name="department_name"/>
          <field name="department_name_test"/>
        </tree>
      </field>
    </record>
    

    <record id="action_departments_views" model="ir.actions.act_window">
      <field name="name">Departments</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">departments</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create"> 
          Departments
        </p><p>
          Click to Add
        </p>
      </field>
    </record>

     <record id ="view_lecturers_add_form" model="ir.ui.view">
        <field name = "name">view.lecturers.add.form</field>
        <field name="model">lecturers</field>
        <field name="arch" type="xml">
          <form name = "Lecturers Add Form">
            <sheet>
              <group>
                <group>
                  <field name="first_name"/>
                  <field name="last_name"/>
                  <field name="phone_number"/>
                  <field name="id_number"/>
                  <field name="department"/>
                  <field name="login"/>
                  <field name="password"/>
                  <button name="add_lecturer" string="Add" type="object" class="oe_highlight"/>
                </group>
              </group>
            </sheet>
          </form>
        </field>
      </record>

    <record id="view_lecturer_tree" model="ir.ui.view">
      <field name="name">view.lecturer.tree</field>
      <field name="model">lecturers</field>

      <field name="arch" type="xml">
        <tree string="lecturer Tree">
          <field name="student_number"/>
          <field name="first_name"/>
          <field name="last_name"/>
          <field name="phone_number"/> 
          <field name="id_number"/> 
          <field name="department"/> 
        </tree>
      </field>
    </record>

    <record id="action_lecturers_views" model="ir.actions.act_window">
      <field name="name">Lecturers</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">lecturers</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create"> 
          Lecturers
        </p><p>
          Click to Register
        </p>
      </field>
    </record>
   
   <menuitem id="menu_administration_root" name="SUNSmart" sequence="100"/>

  <menuitem id="menu_dbmanagement_categ" name="Database Management" parent="menu_administration_root" sequence="10"/>
  <menuitem id="menu_lecturers_categ" name="Lecturers" parent="menu_administration_root" sequence="10"/>
  <menuitem id="menu_students_categ" name="Students" parent="menu_administration_root" sequence="10"/>
  <menuitem id="menu_academia_categ" name="Academia" parent="menu_administration_root" sequence="10"/>
  <menuitem id="menu_profile_categ" name="Profile" parent="menu_administration_root" sequence="10"/>

  <menuitem id="menu_departments" name="Departments" parent="menu_dbmanagement_categ" action="action_departments_views" sequence="1"/>
  <menuitem id="menu_lecturers" name="Lecturers" parent="menu_dbmanagement_categ" action="action_lecturers_views" sequence="2"/>
  <menuitem id="menu_modules" name="Modules" parent="menu_dbmanagement_categ" action="action_modules_views" sequence="3"/>
  <menuitem id="menu_degrees" name="Degrees" parent="menu_dbmanagement_categ" action="action_degrees_views" sequence="4"/>
  <menuitem id="menu_big_lecturers" name="Needs to change" parent="menu_lecturers_categ" action="action_degrees_views" sequence="1"/>
  <menuitem id="menu_students" name="Needs to change" parent="menu_students_categ" action="action_degrees_views" sequence="1"/>

  <menuitem id="menu_academia1" name="Add Department" parent="menu_academia_categ" action="action_degrees_views" sequence="1"/>
  <menuitem id="menu_academia2" name="Add Module" parent="menu_academia_categ" action="action_degrees_views" sequence="1"/>
  <menuitem id="menu_academia3" name="Add Degree" parent="menu_academia_categ" action="action_degrees_views" sequence="1"/>
  <menuitem id="menu_profile" name="Needs to change" parent="menu_profile_categ" action="action_degrees_views" sequence="1"/>

  </data>
</odoo>
